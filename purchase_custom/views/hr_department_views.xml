<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_department_view_acquisition_form" model="ir.ui.view">
        <field name="name">hr.department.view.acquisition.form</field>
        <field name="model">hr.department</field>
        <field name="inherit_id" ref="hr.view_department_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='parent_id']" position="after">
                <field name="is_acquisition"/>
                <field name="see_supplier"/>
            </xpath>
        </field>
    </record>
</odoo>